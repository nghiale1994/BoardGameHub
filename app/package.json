{
  "name": "boardgamehub-app",
  "private": true,
  "version": "0.1.0",
  "homepage": "https://ryuuzoku.github.io/BoardGameHub",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:minimal": "npm run test:unit && npm run test:e2e",
    "test:e2e:ui": "playwright test --ui",
    "peerjs:server": "peerjs --port 9000 --path /peerjs --key peerjs",
    "test:e2e:peerjs": "node ./scripts/run-e2e-peerjs.mjs",
    "test:e2e:all": "npm run test:e2e && npm run test:e2e:peerjs",
    "test:all": "npm run test:unit && npm run test:e2e:all"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.11",
    "@mui/material": "^5.15.11",
    "i18next": "^23.7.16",
    "idb": "^8.0.0",
    "peerjs": "^1.5.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^13.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.18",
    "allure-vitest": "^3.4.5",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "peer": "^1.0.2",
    "postcss": "^8.4.35",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
